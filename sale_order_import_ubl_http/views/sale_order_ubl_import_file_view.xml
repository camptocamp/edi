<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_ubl_import_file_form" model="ir.ui.view">
        <field name="name">sale.order.ubl.import.file form</field>
        <field name="model">sale.order.ubl.import.file</field>
        <field name="arch" type="xml">
            <form string="UBL SO import file file">
                <sheet>
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <group name="file">
                        <field name="name" />
                        <field name="attachment_id" />
                        <field name="method_name" />
                        <field name="job_id" />
                        <field name="job_state" />
                        <field name="parent_id" />
                    </group>
                    <footer>
                        <button
                            name="%(ubl_so_import_reschedule_wiz_action)d"
                            string="Re-schedule"
                            type="action"
                            class="oe_highlight"
                            context="{'default_file_id': active_id}"
                            attrs="{'invisible': [('job_state', '!=', 'failed')]}"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_ubl_import_file_tree" model="ir.ui.view">
        <field name="name">sale.order.ubl.import.file tree</field>
        <field name="model">sale.order.ubl.import.file</field>
        <field name="arch" type="xml">
            <tree string="UBL SO import file files"
                  create="0"
                  decoration-danger="job_state == 'failed'">
              <field name="name" />
              <field name="method_name" />
              <field name="job_id" />
              <field name="job_state" />
              <field name="parent_id" />
            </tree>
        </field>
    </record>


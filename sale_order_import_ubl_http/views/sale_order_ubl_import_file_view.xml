    </record>

    <record id="sale_order_ubl_import_file_view_action" model="ir.actions.act_window">
        <field name="name">UBL SO import file files</field>
        <field name="res_model">sale.order.ubl.import.file</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="sale_order_ubl_import_file_search" />
        <field name="target">current</field>
    </record>

    <menuitem
        id="sale_order_ubl_import_file_menu"
        name="UBL SO import file files"
